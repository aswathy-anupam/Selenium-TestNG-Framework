        </dependencies>
        <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>     
        </properties>
 <build>
        <plugins>
            <!-- Surefire Plugin for running TestNG tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M5</version>
                <configuration>
                <suiteXmlFiles>
                <suiteXmlFile>mastertestng.xml</suiteXmlFile>
                </suiteXmlFiles>
                </configuration>
            </plugin>
            
               <!-- Compiler plugin to set Java version -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.8.1</version> <!-- or later version -->
            <configuration>
                <source>17</source>   <!-- or 11 or later if you're using Java 11 or higher -->
                <target>17</target>   <!-- or 11 or later -->
            </configuration>
        </plugin>
        </plugins>
    </build>
</project>